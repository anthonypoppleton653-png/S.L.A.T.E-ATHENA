{
	// Modified: 2026-02-07T14:00:00Z | Author: COPILOT | Change: Activate SLATE Dark theme

	// ========================================
	// SLATE THEME
	// ========================================
	"workbench.colorTheme": "SLATE Dark",

	// ========================================
	// PYTHON ENVIRONMENT
	// ========================================
	"python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
	"python.terminal.activateEnvironment": true,
	"python.analysis.extraPaths": [
		"${workspaceFolder}",
		"${workspaceFolder}/plugins/slate-sdk",
		"${workspaceFolder}/plugins/slate-copilot",
		"${workspaceFolder}/slate_core",
		"c:\\Users\\Dan\\.vscode-insiders\\extensions\\ms-security.ms-sentinel-1.1.6\\python"
	],
	"python.analysis.autoSearchPaths": true,

	// ========================================
	// COPILOT / SLATE AGENT
	// ========================================
	"chat.promptFiles": true,
	"github.copilot.chat.codeGeneration.instructions": [
		{
			"file": "AGENTS.md"
		},
		{
			"file": ".github/copilot-instructions.md"
		},
		{
			"file": ".github/agents/slate.agent.md"
		},
		{
			"text": "All code edits must include a timestamp+author comment: # Modified: YYYY-MM-DDTHH:MM:SSZ | Author: COPILOT | Change: description"
		},
		{
			"text": "Use isBackground=true for long-running terminal commands. Never use curl.exe. Never bind to 0.0.0.0."
		},
		{
			"text": "This is the S.L.A.T.E. (Synchronized Living Architecture for Transformation and Evolution) project. Key modules: slate/ (core SDK), agents/ (API servers), plugins/ (VSCode extensions), slate_core/plugins/ (agent registry). 7 agents (ALPHA/BETA/GAMMA/DELTA/EPSILON/ZETA/COPILOT). Multi-runner system supports 50 parallel runners across 2 GPUs."
		}
	],
	"github.copilot.chat.testGeneration.instructions": [
		{
			"text": "Use pytest for all tests. Place tests in tests/ directory. Use pytest-asyncio for async tests."
		}
	],

	// ========================================
	// SLATE PLUGINS (LOCAL SDK)
	// ========================================
	"slate.plugins.path": "${workspaceFolder}/plugins",
	"slate.agentRegistry.path": "${workspaceFolder}/slate_core/plugins/agents",
	"slate.agentRegistry.autoLoad": true,
	"slate.multiRunner.enabled": true,
	"slate.multiRunner.maxRunners": 50,
	"slate.multiRunner.configPath": "${workspaceFolder}/.slate_runners.json",

	// ========================================
	// EDITOR
	// ========================================
	"files.associations": {
		"*.jsonl": "json",
		"*.agent.md": "markdown"
	},
	"files.exclude": {
		"**/__pycache__": true,
		"**/*.egg-info": true,
		"**/node_modules": true,
		"**/.slate_cas": true
	},
	"search.exclude": {
		"actions-runner/externals/**": true,
		"actions-runner/bin/**": true,
		"actions-runner/_work/**": true,
		"actions-runner/slate_work/**": true,
		"actions-runner/_diag/**": true,
		"**/__pycache__": true,
		"slate.egg-info/**": true,
		"_temp/**": true,
		"plugins/**/node_modules/**": true
	},

	// ========================================
	// TERMINAL
	// ========================================
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"terminal.integrated.env.windows": {
		"PYTHONPATH": "${workspaceFolder}",
		"SLATE_WORKSPACE": "${workspaceFolder}",
		"PYTHONIOENCODING": "utf-8",
		"CUDA_VISIBLE_DEVICES": "0,1",
		"SLATE_MULTI_RUNNER": "true"
	},

	// ========================================
	// Modified: 2026-02-08T19:00:00Z | Author: COPILOT | Change: Add Docker, Kubernetes, Helm extension settings — standard practice
	// DOCKER / CONTAINERS (ms-azuretools.vscode-docker, ms-azuretools.vscode-containers)
	// ========================================
	"docker.dockerComposeBuild": true,
	"docker.showStartPage": false,
	"docker.containers.label": "Status",
	"docker.containers.sortBy": "Label",
	"docker.images.label": "Tag",
	"docker.commands.build": "docker build --tag slate:local -f ${file} ${workspaceFolder}",
	"docker.environment": {
		"SLATE_WORKSPACE": "${workspaceFolder}",
		"SLATE_DOCKER": "1",
		"DOCKER_BUILDKIT": "1"
	},

	// ========================================
	// KUBERNETES (ms-kubernetes-tools.vscode-kubernetes-tools)
	// ========================================
	"vs-kubernetes": {
		"vs-kubernetes.namespace": "slate",
		"vs-kubernetes.knownKubeconfigs": [],
		"vs-kubernetes.helm-path-windows": "",
		"vs-kubernetes.kubectl-path-windows": "",
		"vs-kubernetes.autoCleanupOnDebugTerminate": true,
		"vs-kubernetes.outputFormat": "yaml"
	},

	// ========================================
	// HELM INTELLISENSE (tim-koehler.helm-intellisense)
	// ========================================
	"helm-intellisense.chartRootPath": "${workspaceFolder}/helm",

	// ========================================
	// YAML (redhat.vscode-yaml) — K8s schema validation
	// ========================================
	"yaml.schemas": {
		"kubernetes": [
			"k8s/*.yaml",
			"k8s/**/*.yaml"
		]
	},
	"yaml.format.enable": true,
	"yaml.validate": true,
	"python.testing.unittestArgs": [
		"-v",
		"-s",
		".",
		"-p",
		"*test.py"
	],
	"python.testing.pytestEnabled": false,
	"python.testing.unittestEnabled": true
}
